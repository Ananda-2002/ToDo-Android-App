<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_add"
        android:foregroundTint="@color/light_blue"
        app:tint="@color/light_blue" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:text="Add a Task"
        android:textSize="25sp"
        android:fontFamily="@font/nunito_medium"/>

    <EditText
        android:id="@+id/newTaskTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broder"
        android:hint="New Task"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:layout_marginTop="150dp"
        android:paddingLeft="16dp"
        android:fontFamily="@font/nunito_medium"
       />

    <TextView
        android:id="@+id/newTaskDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broder"
        android:hint="No Date Selected"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:layout_marginTop="230dp"
        android:paddingLeft="16dp" />

    <TextView
        android:id="@+id/newTaskTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broder"
        android:hint="No Time Selected"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:layout_marginTop="310dp"
        android:paddingLeft="16dp"
        android:fontFamily="@font/nunito_medium"/>

    <Button
        android:id="@+id/newTaskButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newTaskTime"
        android:layout_alignParentEnd="true"
        android:textSize="16dp"
        android:text="Save"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:backgroundTint="#808080"
        android:fontFamily="@font/nunito_medium"/>
</RelativeLayout>
